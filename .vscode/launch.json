{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "legacy",
            "program": "${workspaceRoot}/cmd/prometheus",
            "args": [
                "--config.file=${workspaceRoot}/documentation/examples/prometheus.yml",
                "--storage.tsdb.path=${workspaceRoot}/data",
                "--storage.tsdb.retention=5m",
                "--storage.tsdb.min-block-duration=30s"
            ],
            "env": {"GO111MODULE": "on", "CGO_ENABLED": 0}
        }
    ]
}